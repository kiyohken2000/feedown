rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザーデータへのアクセス制御
    match /users/{userId}/{document=**} {
      // 認証済みユーザーが自分のデータのみ読み書き可能
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // デフォルトで全てのアクセスを拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
